<VirtualHost *:80>
    ServerName localhost
    DocumentRoot %BUILD_DIR%

    <Directory "%BUILD_DIR%">
        Options FollowSymLinks MultiViews ExecCGI
        AllowOverride All
        Require all granted
    </Directory>
</VirtualHost>
<VirtualHost *:443>
    ServerName localhost
    DocumentRoot %BUILD_DIR%

    SSLEngine on
    SSLCertificateFile %MKCERT_DIR%/localhost.pem
    SSLCertificateKeyFile %MKCERT_DIR%/localhost-key.pem

    <Directory "%BUILD_DIR%">
        Options FollowSymLinks MultiViews ExecCGI
        AllowOverride All
        Require all granted
    </Directory>
</VirtualHost>
